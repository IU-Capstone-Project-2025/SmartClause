<?xml version="1.0" encoding="UTF-8"?>
<settings xmlns="http://maven.apache.org/SETTINGS/1.0.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/SETTINGS/1.0.0 
          https://maven.apache.org/xsd/settings-1.0.0.xsd">

  <mirrors>
    <!-- Основное зеркало - Aliyun (хорошо работает в России) -->
    <mirror>
      <id>aliyun-central</id>
      <name>Aliyun Maven Central Mirror</name>
      <url>https://maven.aliyun.com/repository/central</url>
      <mirrorOf>central</mirrorOf>
    </mirror>
    
    <!-- Fallback #1 - Huawei Cloud (альтернатива для Китая/России) -->
    <mirror>
      <id>huaweicloud-central</id>
      <name>Huawei Cloud Maven Central</name>
      <url>https://repo.huaweicloud.com/repository/maven</url>
      <mirrorOf>central</mirrorOf>
    </mirror>
    
    <!-- Fallback #2 - Tencent Cloud -->
    <mirror>
      <id>tencent-central</id>
      <name>Tencent Cloud Maven Central</name>
      <url>https://mirrors.tencent.com/nexus/repository/maven-public</url>
      <mirrorOf>central</mirrorOf>
    </mirror>
    
    <!-- Fallback #3 - Spring репозиторий (для Spring зависимостей) -->
    <mirror>
      <id>spring-milestone</id>
      <name>Spring Milestone Repository</name>
      <url>https://repo.spring.io/milestone</url>
      <mirrorOf>spring-milestones</mirrorOf>
    </mirror>
  </mirrors>

  <!-- Дополнительные репозитории для fallback -->
  <profiles>
    <profile>
      <id>fallback-repos</id>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>
      
      <repositories>
        <!-- Spring репозитории как fallback -->
        <repository>
          <id>spring-releases</id>
          <name>Spring Releases Repository</name>
          <url>https://repo.spring.io/release</url>
          <releases>
            <enabled>true</enabled>
          </releases>
          <snapshots>
            <enabled>false</enabled>
          </snapshots>
        </repository>
        
        <repository>
          <id>spring-milestones</id>
          <name>Spring Milestones Repository</name>
          <url>https://repo.spring.io/milestone</url>
          <releases>
            <enabled>true</enabled>
          </releases>
          <snapshots>
            <enabled>false</enabled>
          </snapshots>
        </repository>
      </repositories>
      
      <pluginRepositories>
        <pluginRepository>
          <id>spring-releases-plugins</id>
          <name>Spring Releases Plugin Repository</name>
          <url>https://repo.spring.io/release</url>
          <releases>
            <enabled>true</enabled>
          </releases>
          <snapshots>
            <enabled>false</enabled>
          </snapshots>
        </pluginRepository>
        
        <pluginRepository>
          <id>central-plugins-fallback</id>
          <name>Maven Central Plugins Fallback</name>
          <url>https://repo1.maven.org/maven2</url>
          <releases>
            <enabled>true</enabled>
          </releases>
          <snapshots>
            <enabled>false</enabled>
          </snapshots>
        </pluginRepository>
      </pluginRepositories>
      
      <properties>
        <!-- Используем wagon transport для лучшей совместимости -->
        <maven.resolver.transport>wagon</maven.resolver.transport>
        
        <!-- Увеличиваем timeout'ы -->
        <maven.wagon.rto>1000</maven.wagon.rto>
        <maven.wagon.http.retryHandler.count>3</maven.wagon.http.retryHandler.count>
        <maven.wagon.http.retryHandler.requestSentEnabled>true</maven.wagon.http.retryHandler.requestSentEnabled>
        <maven.resolver.transport.http.retryHandler.count>3</maven.resolver.transport.http.retryHandler.count>
      </properties>
    </profile>
  </profiles>

  <activeProfiles>
    <activeProfile>fallback-repos</activeProfile>
  </activeProfiles>

  <!-- Серверы для аутентификации (если нужно) -->
  <servers>
    <!-- Пример настройки сервера с аутентификацией -->
    <!--
    <server>
      <id>private-repo</id>
      <username>your-username</username>
      <password>your-password</password>
    </server>
    -->
  </servers>

</settings>
