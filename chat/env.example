# Database Configuration
DATABASE_URL=postgresql+asyncpg://user:password@postgres:5432/chatdb

# Chat Service Configuration
API_VERSION=v1
MAX_MEMORY_MESSAGES=20
DEFAULT_MEMORY_MESSAGES=10

# OpenRouter API Configuration (for LLM)
OPENROUTER_API_KEY=your_openrouter_api_key_here
OPENROUTER_BASE_URL=https://openrouter.ai/api/v1

# LLM Model Configuration
LLM_MODEL=google/gemini-2.5-flash-lite-preview-06-17
LLM_TEMPERATURE=0.7
LLM_MAX_TOKENS=2000

# Analyzer Service Configuration
ANALYZER_BASE_URL=http://analyzer:8001/api/v1

# Authentication
JWT_SECRET=your_jwt_secret_here
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30 